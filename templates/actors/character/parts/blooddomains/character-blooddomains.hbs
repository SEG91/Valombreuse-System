<div class="flexrow top">
    <div class="flexrow flex4">
        <div class="flex1 center">
            <div class="field-label">{{ localize 'VALOMBREUSE.attributes.bld.label' }}</div>
        </div>
        <div id="life_icon" class="flex1 center">
            <input class="field-label-icon-hp field-value" name="system.attributes.bld.value" type="text" value="{{system.attributes.bld.value}}" placeholder="BP" data-dtype="Number"/>
        </div>
        <div class="flex1 center">
            <div class="field-label">{{ localize 'VALOMBREUSE.attributes.bldmax.label' }}</div>
        </div>
        <div id="life_icon" class="flex1 center">
            <input class="field-label-icon-hp field-value" name="system.attributes.bld.max" type="text" value="{{system.attributes.bld.max}}" placeholder="BPmax" data-dtype="Number"/>
        </div>
         <div class="flex1 center">
            <div class="field-label">{{ localize 'VALOMBREUSE.attributes.bldtarget.label' }}</div>
        </div>
        <div id="life_icon" class="flex1 center">
            <input class="field-label-icon-hp field-value" name="system.attributes.bld.target" type="text" value="{{system.attributes.bld.target}}" placeholder="BPtarget" data-dtype="Number"/>
        </div>
    </div>
</div>
{{InitializeGlobalCount}}
<div class="flexrow flex2">
{{#each (getBlooddomains actor.items) as |blooddomain bd|}}

  {{#if (CompareGlobalCount 0)}}
    <div class="flexcol">
  {{/if}}
  {{#if (CompareGlobalCount 2)}}
    <div class="flexcol">
  {{/if}}
        <ol class="inventory-list competence-list">
            <li class="inventory-header flexrow" data-item-id="{{_id}}" data-item-type="item">
                <div class="bld-name flexrow">{{blooddomain.name}}</div>
                <div class="bld-detail competence-col-width">{{ localize "VALOMBREUSE.ui.score" }}</div>
                <div class="bld-detail flexrow competence-col-width">
                    <input class="field-value flex1 bld_score" name="blooddomain.system.score" type="text" value="{{blooddomain.system.score}}" placeholder="0" data-dtype="Number"/>
                </div>
            </li>
            {{debug actor}}
            {{#if (IsSangImpur blooddomain)}}
            {{#each (getBloodpowers blooddomain) as |bloodpower pw|}}
                <ol class="item-list">
                    <li class="item flexrow" data-item-id="{{_id}}" data-item-type="item">
                        <div class="rollable no-wrap" title="{{bloodpower.name}}">
                            <div class="flexrow no-wrap ">
                                <div class="field-label no-wrap left competence_name">{{bloodpower.name}}
                                    <span class="comp_tooltiptext">
                                        <h1>{{bloodpower.name}} :</h1>{{{bloodpower.system.description}}}
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="item-detail flexrow competence-col-width">
                            <label class="field-value flex1 capa_score" name="bloodpower.system.score" type="text" value="{{bloodpower.system.score}}" placeholder="" data-dtype="Number"/>
                        </div>
                    </li>
                </ol>
            {{/each}}
            {{else}}
            {{#each (getBloodpowersbyRank blooddomain) as |bloodpower pw|}}
                <ol class="item-list">
                    <li class="item flexrow" data-item-id="{{_id}}" data-item-type="item">
                        <div class="rollable no-wrap" title="{{bloodpower.name}}">
                            <div class="flexrow no-wrap ">
                                <div class="field-label no-wrap left competence_name">{{bloodpower.name}}
                                    <span class="comp_tooltiptext">
                                        <h1>{{bloodpower.name}} :</h1>{{{bloodpower.system.description}}}
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="item-detail flexrow competence-col-width">
                            <label class="field-value flex1 capa_score" name="bloodpower.system.score" type="text" value="{{bloodpower.system.score}}" placeholder="" data-dtype="Number"/>
                        </div>
                    </li>
                </ol>
            {{/each}}
            {{/if}}
        </ol>
    {{#if (CompareGlobalCount 1)}}
        </div>
    {{/if}}
    {{#if (CompareGlobalCount 3)}}
        </div>
    {{/if}}
    {{IncreaseGlobalCount}}
{{/each}}
</div>

     
