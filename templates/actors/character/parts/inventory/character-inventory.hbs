<div class="flexrow no-wrap currencies" style="max-height:20px">

     <div class="flex1 center">Bourse</div>
    <div class="flex1 center coin">
        <i title="Couronne" class="fas fa-coins" style="color:goldenrod"></i>
        <input class="field-value coin-field" name="system.currency.gp.qty" type="number" value="{{system.currency.gp.qty}}" placeholder="Couronne" data-dtype="Number"/>
    </div>
    <div class="flex1 center coin">
        <i title="Orbe" class="fas fa-coins" style="color:silver"></i>
        <input class="field-value center coin-field" name="system.currency.sp.qty" type="number" value="{{system.currency.sp.qty}}" placeholder="Orbe" data-dtype="Number"/>
    </div>
    <div class="flex1 center coin">
        <i title="Sceptre" class="fas fa-coins" style="color:saddlebrown"></i>
        <input class="field-value coin-field" name="system.currency.cp.qty" type="number" value="{{system.currency.cp.qty}}" placeholder="Sceptre" data-dtype="Number"/>
    </div>
        <div class="flex1 center coin">
        <i title="Roi" class="fas fa-coins" style="color:dimgray"></i>
        <input class="field-value coin-field" name="system.currency.fp.qty" type="number" value="{{system.currency.fp.qty}}" placeholder="Roi" data-dtype="Number"/>
    </div>
</div>

    <ol class="inventory-list">
        <li class="inventory-header flexrow">
            <div class="item-name flexrow"></div>
            <div class="item-detail">Qt√©</div>
            <div class="item-detail">Equiper</div>
             {{!-- <div class="item-detail">Roll</div>--}}
            <div class="item-controls">
                <a class="item-control item-create new-item" title="Ajouter un objet"><i class="fas fa-plus"></i></a>   
                    <i class="fas fa-folder-plus"></i>
                </a>
            </div>
        </li>
        {{#if (notEmpty (getInventory actor.items))}}
        
        {{#each (getArraySubCategorywithItems actor.items)}}
                {{#if (notEmpty this.items)}}
                    <li class="inventory-header flexrow"><div class="item-name center flexrow">{{this.value}}</div></li>
                {{#each this.items}}
                        {{> "systems/valombreuse/templates/actors/character/parts/inventory/character-inventory-item.hbs" this}}
                    {{/each}}
                {{/if}}
        {{/each}}

     

        {{else}}
            <p>Votre inventaire est vide.</p>
        {{/if}}
    </ol>

