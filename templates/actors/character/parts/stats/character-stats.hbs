<div class="flexrow no-wrap stats">
    <div class="sidebar flex1 pos_relative">
        <div class="attrvertalign">
            <img class="profession-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>
        </div>
    </div>
    <div class="flexrow flex3">
        <div class="flex1 layout center carac pos_relative">
            <!-- STATS -->
            {{> "systems/valombreuse/templates/actors/character/parts/stats/character-attributes.hbs"}}
        </div>
        <div class="flex1 layout center hpcol1 pos_relative">
            <!-- HP -->
            {{> "systems/valombreuse/templates/actors/character/parts/stats/character-hp.hbs"}}
        </div>
        <div class="flex1 layout center powercol pos_relative">
            <!-- Energy -->
            {{> "systems/valombreuse/templates/actors/character/parts/stats/character-energy.hbs"}}
        </div> 
    </div>
    <div class="flexrow no-wrap description_row">
        <div class="flexcol"> 
            <div class="form-header">{{ localize "VALOMBREUSE.details.description" }}</div>
                  {{editor biographyHTML target="system.description" button=true owner=owner editable=editable}}
            </div>
        </div>
    </div>
</div>


