<div class="form-header">Pouvoir de Sang Ancien</div>

 <div class="flexcol">
        <ol class="inventory-list competence-list">
            <li class="inventory-header flexrow">
                <div class="item-name flexrow">{{ localize "VALOMBREUSE.ui.bloodpower" }}</div>
                <div class="item-name flexrow">{{ localize "VALOMBREUSE.ui.score" }}</div>
                <div class="item-controls">
                </div>
            </li>
            {{#each this.system.bloodpowers}}
                <ol class="item-list">
                    <li class="item flexrow" data-item-id="{{_id}}" data-item-type="bloodpower">
                            <div class="flexrow no-wrap ">
                                <div class="field-label no-wrap left competence_name">{{name}}
                                    <span class="comp_tooltiptext"><h1>{{name}} :</h1>{{{system.description}}}</span>
                                </div>
                            </div>
                            <div class="item-detail flexrow competence-col-width">
                                 <div class="field-value flex1 capa_score">{{system.score}}</div>
                            </div>
                        <div class="item-controls">
                            <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
                        </div>
                    </li>
                </ol>
            {{/each}}
        </ol>
    </div>